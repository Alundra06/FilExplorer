
@model IEnumerable<FilExplorer.DataLayer.Models.FolderModel>
<div class="container">
    <div class="row form-group product-chooser">
        @foreach (var item in Model.ToList())
        {
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                <div id=@item.FolderID class="product-chooser-item">
                    <i class="fa fa-folder-open fa-5x text-warning"></i>
                    <div class="col-xs-8 col-sm-8 col-md-12 col-lg-12">
                        <span class="title">@Html.DisplayFor(modelItem => item.Name)</span>
                    </div>
                    <ul>
                        @foreach (var file in item.Files.ToList())
                        {
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                <li>
                                    <a href="">
                                        @Html.DisplayFor(modelItem => file.Name)
                                    </a>
                                </li>

                            </div>
                        }
                    </ul>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(function () {
        $('div.product-chooser').not('.disabled').find('div.product-chooser-item').on('click', function () {
            $(this).parent().parent().find('div.product-chooser-item').removeClass('selected');
            $(this).addClass('selected');
            //alert($(this).attr('id'));
            $('#folderID').val($(this).attr('id'));
                $.ajax({
                    url: '@Url.Action("GetFolderPath", "Folder")',
                    type: 'GET',
                    data: { folderID: $(this).attr('id') },
                    contentType: 'application/json; charset=utf-8',
                    success: function (response) {
                        //alert();
                        $('#folderName').val(response.toString());
                    },
                    error: function () {
                        alert("error");
                    }
                });
           // alert($('#folderName').val());

        });
    });
</script>






